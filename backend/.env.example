# Cache Settings
ENABLE_CACHE=true
CACHE_TTL_SECONDS=3600

# GitHub API (optional, for private repos)
GITHUB_TOKEN=your_github_token_here

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/repo_starship.log