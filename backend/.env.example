# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# CORS Settings
CORS_ORIGINS=http://localhost:3000

# Repository Analysis Settings
MAX_FILE_SIZE_MB=10
MAX_FILES_TO_ANALYZE=1000
